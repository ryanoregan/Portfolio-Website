<style>

    #container{
        display: grid;
        grid-template-columns: 1fr 28rem 28rem 1fr;
        grid-template-rows: auto auto auto auto;
        grid-gap: 1rem;
        width: 100%;
    }

    #title {
        grid-column: 2 / 4;
        grid-row: 1 / 2;
        display: flex;
        justify-self: center;
        text-align: center;
        font-size: 36px;
        
        margin-top: 20px;
        margin-bottom: 25px;
        padding: 0px 15px 0px 20px; /* Adds space inside the box */
        background-color: hsl(224, 14%, 14%); /* Dark background for the box */
        border-radius: 12px; /* Rounds the corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Optional: Adds a subtle shadow around the box */
        outline-style: groove;
        outline-width: 0.1px;
        outline-color: rgba(255, 255, 255, 0.4);
    }

    #title p {
        font-size: 12px;
        color: rgba(255, 255, 255, 0.6); 
        margin-top: 14px;
    }

    #copyEmailButton {
        grid-column: 2 / 4; /* Place it in the center columns */
        justify-self: left; /* Align it horizontally */
        align-self: center; /* Align it vertically */
        display: flex;
        flex-direction: row;
        gap: 15px;
        margin-bottom: 40px;

        .copyEmailButton {
        padding: 12px 15px;
        background-color:  hsl(224, 20%, 20%);
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        display: flex;
        gap: 8px;
        white-space: nowrap;
        font-family:'Courier New', Courier, monospace;
    }

    .copyEmailButton svg {
        width: 15px; /* Set a fixed size for the icon */
        height: 15px;
    }

    .copyEmailButton:hover{
        background-color:  hsl(224, 30%, 30%);
    }
    
    .copied {
        position: absolute;
        margin-top: 15px;
        font-family: 'Courier New', Courier, monospace;
    }

    .buttonStyle {
        padding: 10px 20px;
        background-color:  hsl(224, 20%, 20%);
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        display: flex;
        gap: 8px;
        white-space: nowrap;
        font-family:'Courier New', Courier, monospace;
        text-decoration: none;
    }

    .buttonStyle:hover{
        background-color:  hsl(224, 30%, 30%);
    }

    }


    #intro {
        grid-column: 2 / 3;
        grid-row: 3 / 4;
        margin-top: 20px;
        max-height: 200px; /* Makes the box shorter than the aside box */

        padding: 0px 50px 0px 25px; /* Adds space inside the box */
        background-color: hsl(224, 14%, 14%); /* Dark background for the box */
        border-radius: 12px; /* Rounds the corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Optional: Adds a subtle shadow around the box */
        outline-style: groove;
        outline-width: 0.1px;
        outline-color: rgba(255, 255, 255, 0.4);
    }

    #intro p {
        color: rgba(255, 255, 255, 0.6);  
    }

    #intro:hover {
        outline-color:rgba(255, 255, 255, 1);
        transition: outline-width 0.5s ease, outline-color 0.5s ease;
        box-shadow:  0 4px 32px rgba(0, 0, 0, 2);
    }

    #githubLogo {
        width: 70px;
        height: 70px;
        margin-top: 60px;
        margin-left: 25px;
        border-radius: 50%; /* Make the image circular */
        overflow: hidden; /* Ensure content within the circle doesn't overflow */
    }

    #githubLogo:hover {
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.3); /* Tighter shadow with less spread */
        z-index: 10; /* Bring the hovered image to the front */
        position: relative; /* Ensure it transcends its default stacking */
        transform: scale(1.1); /* Slight scale up to highlight */
    }

    #stacks {
        margin-top: 220px;
        grid-column: 2 / 3;
        grid-row: 3 / 4;

        width: 100%; /* Ensure it takes up the full width of column 2 */
        overflow: hidden; /* Hide overflow so the images don‚Äôt go outside the container */
    }

    #stacks ul {
        display: flex;
        flex-direction: row;
        gap: 10px;
    }

    #stacks li {
        list-style-type: none;
    }

    #technologies {
        margin-top: 400px;
        grid-column: 2 / 3;
        grid-row: 3 / 4;
        width: 100%; /* Ensure it takes up the full width of column 2 */
        overflow: hidden; /* Hide overflow so the images don‚Äôt go outside the container */
        padding-bottom: 200px;
    }

    .technologyImages {
        display: flex;
        overflow: visible; /* Allow images to overflow the container */
        position: relative;
        width: 100%;
        padding: 10px 0; /* Add some space to avoid initial overlap */
    }

    .technologyImages .inner-wrapper {
        display: flex;
        animation: scrollTechnologies 20s linear infinite; /* Seamless, infinite scrolling */
    }

    .technologyImages::after {
        content: "";
        display: block;
        width: 100%; /* Fill the empty space */
    }

    .technologyImages .technology-item {
        position: relative;
        margin: 0 10px; /* Space between the images */
        text-align: center;
    }

    .technologyImages img {
        width: 100px; /* Base size of images */
        height: 100px;
        object-fit: contain;
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth animation */
        will-change: transform; /* Optimize the hover animation */
    }

    .technologyImages img:hover {
        transform: scale(1.5); /* Enlarge the image */
        z-index: 10; /* Bring the hovered image to the front */
        position: relative; /* Ensure it transcends its default stacking */
    }

    .technologyImages .technology-blurb {
        position: absolute;
        bottom: -150px; /* Position the blurb below the image */
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        opacity: 0;
        visibility: hidden;
        background-color: rgba(0, 0, 0, 0.7);
        color: #fff;
        padding: 5px;
        border-radius: 5px;
        transition: opacity 0.3s ease, visibility 0.3s ease;
    }
    .technologyImages .technology-item:hover .technology-blurb {
        opacity: 1;
        visibility: visible;
    }

    /* Pause animation on hover */
    .technologyImages:hover .inner-wrapper {
        animation-play-state: paused;
    }

    @keyframes scrollTechnologies {
        from {
            transform: translateX(0); /* Start off-screen to the right */
        }
        to {
            transform: translateX(-50%); /* Move off-screen to the left */
        }
    }

    aside {
        grid-column: 3 / 4;
        grid-row: 3 / 4;
        padding: 10px;
        margin-top: 70px;
        height: 600px; /* Set a fixed height for the aside */
        overflow-y: auto; /* Enable vertical scrolling */
        padding: 20px; /* Optional padding */
        border: 1px solid #ddd; /* Optional border */
        background-color: #f9f9f9; /* Optional background color */
        
    
        padding: 0px 50px 10px 25px; /* Adds space inside the box */
        background-color: hsl(224, 14%, 14%); /* Dark background for the box */
        border-radius: 12px; /* Rounds the corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Optional: Adds a subtle shadow around the box */
        outline-style: groove;
