        outline-color: rgba(255, 255, 255, 0.4);
    }
    
    aside:hover {
        outline-color:rgba(255, 255, 255, 1);
        transition: outline-width 0.5s ease, outline-color 0.5s ease;
        box-shadow:  0 4px 32px rgba(0, 0, 0, 2);
    }

    aside h2 {
        text-align: center;
        font-size: 34px;
    }

    aside p {
        color: rgba(255, 255, 255, 0.6);
    }

    .projectImage {
        outline-color:rgba(255, 255, 255, 0.2);
        outline-width: 3px;
        outline-style: groove;
        margin-bottom: 20px; /* Space between projects */
    }

    aside img {
        width: 100%;
        height: 100%;
    }

    #technologies h2 {
        text-align: center;
        font-size: 34px;
    }


    body {
        background-color: #2b2b2b; /* Dark background color for the body */
        color: #fff; /* Light text color for contrast */
        font-family: 'Rubik';

        background-image: 
        repeating-linear-gradient(to bottom, transparent, transparent 30px, rgba(255, 255, 255, 0.1) 30px, rgba(255, 255, 255, 0.1) 31px), /* Subtle background lines */
        repeating-linear-gradient(to right, transparent, transparent 30px, rgba(255, 255, 255, 0.1) 30px, rgba(255, 255, 255, 0.1) 31px); /* Subtle background lines */
    
        background-repeat: no-repeat;
        background-color: hsl(224, 10%, 10%); /* Darker background color */
        background-size: 100% 100%; /* Adjusts to fill the element */
        width: 100%;
        height: 100%;
        animation: gridWipe 1s linear; /* Animation for grid expansion */
    }

    @keyframes gridWipe {
        0% {
            background-size: 0 0;
        }
        100% {
            background-size: 100% 100%;
        }
    }


</style>